{
    "swagger": "2.0",
    "info": {
      "version": "1.1", 
      "title": "CoinTail API",
      "description": "Track other wallets transactions.",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/wallet": {
            "get": {
                "summary": "Get Wallet Tokens on specified chain.",
                "description": "Returns the wallet's token balance.",
                "tags": ["Wallets"],
                "parameters": [
                    {
                        "name": "address",
                        "in": "query",
                        "description": "The wallet address.",
                        "required": "false",
                        "type": "string",
                        "example": "0xEBe035dA5DF98E8297D31cFD1c249732a6d6d3bA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "info": {
                                    "type": "array",
                                    "description": "Info About the Wallet"
                                },
                                "groups": {
                                    "type": "array",
                                    "description": "Wallet Groups"
                                },
                                "followers": {
                                    "type": "array",
                                    "description": "Which Wallets follow this Wallet"
                                },
                                "following": {
                                    "type": "array",
                                    "description": "Which Wallets this Wallet Follows"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a Wallet",
                "description": "Create a new Wallet",
                "tags": ["Wallets"],
                "responses": {
                    "200": {
                        "description": "Successful Created",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "address": {
                                    "type": "string"
                                },
                                "chain": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Get Wallet Tokens on specified chain.",
                "description": "Returns the wallet's token balance.",
                "tags": ["Wallets"],
                "parameters": [
                    {
                        "name": "chain",
                        "in": "path",
                        "description": "The chain that the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "ethereum"
                    },
                    {
                        "name": "network",
                        "in": "path",
                        "description": "The network on the chain the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "mainnet"
                    },
                    {
                        "name": "wallet",
                        "in": "path",
                        "description": "The wallet address.",
                        "required": true,
                        "type": "string",
                        "example": "0xEBe035dA5DF98E8297D31cFD1c249732a6d6d3bA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "balance": {
                                    "type": "number",
                                    "description": "The user's wallet balance"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/wallet/tokens": {
            "get": {
                "summary": "Get Wallet Tokens on specified chain.",
                "description": "Returns the wallet's token balance.",
                "tags": ["Wallets"],
                "parameters": [
                    {
                        "name": "chain",
                        "in": "path",
                        "description": "The chain that the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "ethereum"
                    },
                    {
                        "name": "network",
                        "in": "path",
                        "description": "The network on the chain the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "mainnet"
                    },
                    {
                        "name": "wallet",
                        "in": "path",
                        "description": "The wallet address.",
                        "required": true,
                        "type": "string",
                        "example": "0xEBe035dA5DF98E8297D31cFD1c249732a6d6d3bA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "balance": {
                                    "type": "number",
                                    "description": "The user's wallet balance"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/wallet/transactions": {
            "get": {
                "summary": "Get transactions by user wallet (utilizing the Alchemy SDK)",
                "description": "Returns the user's wallet transactions.",
                "tags": ["Wallets"],
                "parameters": [
                    {
                        "name": "chain",
                        "in": "path",
                        "description": "The chain that the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "ethereum"
                    },
                    {
                        "name": "network",
                        "in": "path",
                        "description": "The network on the chain the wallet is on.",
                        "required": true,
                        "type": "string",
                        "example": "mainnet"
                    },
                    {
                        "name": "wallet",
                        "in": "path",
                        "description": "The wallet address.",
                        "required": true,
                        "type": "string",
                        "example": "0xEBe035dA5DF98E8297D31cFD1c249732a6d6d3bA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "balance": {
                                    "type": "number",
                                    "description": "The user's wallet balance"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/group": {
            "get": {
                "summary": "Get Group information including group wallets, owner, and details",
                "description": "Get Group by Group Id",
                "tags": ["Groups"],
                "parameters": [
                    {
                        "name": "groupId",
                        "in": "query",
                        "description": "The group id of the requested group.",
                        "required": true,
                        "type": "string",
                        "example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "500": {
                        "description": "Failure"
                    }
                }
            },
            "post": {
                "summary": "Create a new Group",
                "description": "Get Group by Group Id",
                "tags": ["Groups"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "body",
                        "description": "the group name",
                        "required": true,
                        "type": "string",
                        "example": "Wagmi TV"
                    },
                    {
                        "name": "description",
                        "in": "body",
                        "description": "the group description",
                        "required": true,
                        "type": "string",
                        "example": "collection of degens"
                    },
                    {
                        "name": "ownerId",
                        "in": "body",
                        "description": "the wallet id of the owner of the group",
                        "required": true,
                        "type": "string",
                        "example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "balance": {
                                    "type": "number",
                                    "description": "The user's wallet balance"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/group/wallet": {
            "post": {
                "summary": "Create a new Group Wallet.",
                "description": "Adds a wallet to a group.",
                "tags": ["Groups"],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/transaction": {
            "get": {
                "summary": "Endpoint to get Transactions associated with a Wallet.",
                "description": "Return Wallet Transactions.",
                "tags": ["Transactions / Notifications"],
                "parameters": [
                    {
                        "name": "address",
                        "in": "query",
                        "description": "The address of the wallet.",
                        "required": true,
                        "type": "string",
                        "example": "0xEBe035dA5DF98E8297D31cFD1c249732a6d6d3bA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "500": {
                        "description": "Failure"
                    }
                }
            },
            "post": {
                "summary": "Recieve a request from Alchemy when a wallet performs a transaction",
                "description": "Post request from Alchemy about a wallet transaction",
                "tags": ["Transactions / Notifications"],
                "requestBody": {
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "500": {
                        "description": "Failure"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Wallets"
        },{
            "name": "Groups"
        },{
            "name": "Transactions / Notifications"
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"]
}